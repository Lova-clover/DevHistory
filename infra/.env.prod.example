# ============================================================
# DevHistory – Production Environment Variables
# ============================================================
# Copy this file:  cp .env.prod.example .env
# Then fill in real values before running docker compose.
# ============================================================

# ── Domain ──────────────────────────────────────────
DOMAIN=devhistory.com

# ── PostgreSQL ──────────────────────────────────────
POSTGRES_DB=devhistory
POSTGRES_USER=devhistory
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ── JWT ─────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=CHANGE_ME

# ── GitHub OAuth ────────────────────────────────────
# Create at: https://github.com/settings/developers
# Callback URL: https://YOURDOMAIN/api/auth/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Explicitly set so the API builds the correct OAuth redirect URL
# Must match the Callback URL above.
GITHUB_REDIRECT_URI=https://devhistory.com/api/auth/github/callback

# ── OpenAI (server-side fallback) ───────────────────
# Optional if all users provide BYO keys
OPENAI_API_KEY=

# ── Fernet Encryption Key (for BYO LLM keys) ───────
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CREDENTIALS_ENCRYPTION_KEY=CHANGE_ME

# ── Cookie ──────────────────────────────────────────
COOKIE_DOMAIN=devhistory.com
COOKIE_SECURE=true

# ── Admin ───────────────────────────────────────────
# Comma-separated GitHub usernames that get admin access
ADMIN_GITHUB_USERNAMES=your-github-username
